<%= form_with(model: @weekly_plan, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :week %>
    <%= form.date_field :week, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :category %>
  <%= form.select :category, WeeklyPlan.categories.keys.map { |c| [c.humanize, c] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :goal %>
    <%= form.text_area :goal, class: "form-control" %>
  </div>



  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
